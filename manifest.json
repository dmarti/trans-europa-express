{
  "description": "Unlock virtual European status by setting non-personalized web adverising options.",
  "manifest_version": 2,
  "name": "Trans Europa Express",
  "version": "0.22",
  "homepage_url": "https://blog.zgp.org/unlocking-the-hidden-european-mode-in-web-ads/",
  "icons": {
    "48": "icons/cheese.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["euro.js"],
      "all_frames": true,
      "run_at": "document_start"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["dom_loaded.js"],
      "all_frames": true,
      "run_at": "document_end"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["document_idle.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]

}
